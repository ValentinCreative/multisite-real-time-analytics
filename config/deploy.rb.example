# config valid only for Capistrano 3.4
lock '3.4.0'

############################################
# Setup project
############################################

set :application, "realtime"
set :repo_url, "git@github.com:ValentinCreative/multisite-real-time-analytics.git"
set :scm, :git

############################################
# Setup Capistrano
############################################

set :log_level, :info
set :use_sudo, false

set :ssh_options, {
    forward_agent: true
}

set :keep_releases, 5

############################################
# Linked files and directories (symlinks)
############################################

set :linked_dirs, %w{assets}

namespace :deploy do

    after :updated, :maestro do
        invoke 'assets:gulp'
        invoke 'assets:copy'
    end

end
